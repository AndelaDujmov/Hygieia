@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />


<div class="row">
    <form id="profile-form" method="post">
    <div class="col-md-5 border-right">
        <div class="p-3 py-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-right">Profile Settings</h4>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                     <label asp-for="Input.FirstName" class="labels"></label>
                    <input asp-for="Input.FirstName" class="form-control"/>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.LastName" class="labels"></label>
                    <input asp-for="Input.LastName" class="form-control"/>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <label asp-for="Input.Username" class="labels"></label>
                    <input asp-for="Input.Username" class="form-control" />
                </div>
                <div class="col-md-12">
                    <label asp-for="Input.Email" class="labels"></label>
                    <input asp-for="Input.Email" class="form-control"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="Input.PhoneNumber" class="labels"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control"/>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-md-12">
                    <label asp-for="Input.DateOfBirth" class="labels"></label>
                    <input asp-for="Input.DateOfBirth" class="form-control"/>
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </div>
    </div>
   </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model HygieiaApp.Models.Models.Immunization

@{
    ViewData["Title"] = "Create Immunization";
}

<div class="card-body p-3">
<form method="post" class="row">
    <div class="border p-3  mt-4">
        <div class="row pb-2">
                <h2 class="text-primary py-3 ">Add New Immunization</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="form-floating py-2">
            <label class="col-form-label" asp-for="Type"></label><br/>
            <input type="text" asp-for="Type" class="form-control"/><br/>
            <span asp-validation-for="Type" class="text-danger"></span><br/>
        </div>
        <div class="form-floating">
            <label class="col-form-label" asp-for="UsedFor"></label><br/>
            <input type="text" asp-for="UsedFor" class="form-control"/><br/>
            <span asp-validation-for="UsedFor" class="text-danger"></span><br/>
        </div>
    </div>
            
    <button type="submit" class="btn btn-primary" style="width: 100px">Submit</button>
    <a asp-area="Doctor" asp-controller="Immunization" asp-action="Index">Back to listing</a>
      
</form>
</div>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
@model System.Collections.Generic.IEnumerable<HygieiaApp.Models.ApplicationUser>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Users</h2>
        </div>

        <br/>
        <br/>
        <br/>
        <br/>
      <table class="table table table-bordered border-1.4 border-blue">
                  <thead class="thead-dark text-secondary" style="background-color: lightblue; text-overline-color: white; color: white">
                  <tr class="text-primary">
                      <th>
                          Email
                      </th>
                      <th>
                          Username
                      </th>
                     
                      <th>
                          
                      </th>

                      <th>
                          
                      </th>
                     
                  </tr>
                  </thead>
                  <tbody>
                  @foreach (var mc in Model)
                  {
                      <tr>
                          <td>@mc.Email</td>
                          <td>@mc.UserName</td>
                          <td>@mc.Role</td>
                          <td>
                              
                                  <a asp-action="UndoUser" asp-route-id="@mc.Id" class="btn btn-primary mx-2">
                                     <i class="bi bi-arrow-counterclockwise"></i>
                                  </a>
                             
                          </td>
                      </tr>
                  }
                  </tbody>
              </table>
    </div>
</div>


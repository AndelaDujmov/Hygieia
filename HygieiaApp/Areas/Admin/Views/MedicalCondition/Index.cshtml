@using HygieiaApp
@model IEnumerable<HygieiaApp.Models.Models.MedicalCondition>
<partial name="_Notification"/>

@{
    ViewData["Title"] = "Medical Conditions";
}


<div class="container p-3">
    <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Conditions</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="MedicalCondition" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-dotted"></i> &nbsp; Add new condition
                </a>
            </div>
        
        <br/>
        <br/>
        <br/>
        <br/>
        <br/>
        <table class="table table table-bordered border-1.4 border-blue">
            <thead class="thead-dark text-secondary" style="background-color: lightblue; text-overline-color: white; color: white">
            <tr class="text-primary">
                <th>
                    Category
                </th>
                <th>
                    Type
                </th>
                <th>
                    Symptoms
                </th>
                <th>
                    Diagnosis Name
                </th>
                <th>
                    Treatment
                </th>
                <th>
                    
                </th>
               
            </tr>
            </thead>
            <tbody>
            @foreach (var mc in Model)
            {
                <tr>
                    <td>@mc.Category.ToString()</td>
                    <td>@mc.Type</td>
                    <td>@mc.Symptoms</td>
                    <td>@mc.NameOfDiagnosis</td>
                    <td>@mc.Treatment</td>
                    <td>
                          <div class="w-75 btn-group" role="group">
                              <a asp-controller="MedicalCondition" asp-action="Edit" asp-route-id="@mc.Id" class="btn btn-primary mx-2">
                                  <i class="bi bi-pencil-square"></i> 
                              </a> &nbsp;
                              <a asp-controller="MedicalCondition" asp-action="Edit" asp-route-id="@mc.Id" class="btn btn-primary mx-2">
                                  <i class="bi bi-info-circle-fill"></i> 
                              </a> &nbsp;
                              <a asp-controller="MedicalCondition" asp-action="Delete" asp-route-id="@mc.Id" class="btn btn-primary mx-2">
                                  <i class="bi bi-trash"></i> 
                              </a>
                          </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
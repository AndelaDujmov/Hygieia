@model IEnumerable<HygieiaApp.Models.Models.Medication>
<partial name="_Notification"/>

@{
    ViewData["Title"] = "Medications";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Medications</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Medication" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> &nbsp; Add new medication
            </a>
        </div>
        
        <br/>
        <br/>
        <br/>
        <br/>
      <table class="table table table-bordered border-1.4 border-blue">
                  <thead class="thead-dark text-secondary" style="background-color: lightblue; text-overline-color: white; color: white">
                  <tr class="text-primary">
                      <th>
                          Classification
                      </th>
                      <th>
                          Type
                      </th>
                      <th>
                          Name
                      </th>
                      <th>
                          Side Effects
                      </th>
                     
                      <th>
                          
                      </th>
                     
                  </tr>
                  </thead>
                  <tbody>
                  @foreach (var mc in Model)
                  {
                      <tr>
                          <td>@mc.Class</td>
                          <td>@mc.Type</td>
                          <td>@mc.Name</td>
                          <td>@mc.SideEffects</td>
                          <td>
                              <div class="w-75 btn-group" role="group">
                                  <a asp-controller="Medication" asp-action="Edit" asp-route-id="@mc.Id" class="btn btn-primary mx-2">
                                      <i class="bi bi-pencil-square"></i>
                                  </a> &nbsp;
                                  <a asp-controller="Medication" asp-action="Delete" asp-route-id="@mc.Id" class="btn btn-primary mx-2">
                                      <i class="bi bi-trash"></i>
                                  </a>
                              </div>
                          </td>
                      </tr>
                  }
                  </tbody>
              </table>
    </div>
</div>
@model HygieiaApp.Models.DTO.PatientVaccinationDto


<div class="card-body p-3">
    <form method="post" class="row">

        @if (@Model.ImmunizationPatients is not null)
        {
            <h5 class="card-title">Vaccination Terms</h5>
            
           @foreach (var date in @Model.ImmunizationPatients)
           {
               <div class="card w-50" style="margin-bottom: 15px">
                   <div class="card-body">
                       <p class="card-text">@date.DateOfVaccination</p>
                       <p class="card-text">@date.Selected</p>
                      
                       <button href="#"  asp-area="Patient" asp-action="AssignForImmunizationDate" asp-route-id="@date.Id" class="btn btn-primary">Apply</button>
                       <a class="btn btn-danger">Ignore</a>

                   </div>
               </div>
           }
        }
        else
        { 
            <div class="border p-3  mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary py-3 ">Search for immunization date </h2>
                    <hr/>
                </div>
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2">
                    <label class="col-form-label"></label><br/>
                    <input type="date" name="date" class="form-control"/><br/>
                </div>
            
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100px"> Submit</button>
            <a asp-area="Doctor" asp-controller="Doctor" asp-action="Index">Back to listing</a>
        }
      
      
    </form>
</div>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
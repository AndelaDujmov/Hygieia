@page
@using HygieiaApp.Models.Enums
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            @if (User.IsInRole(RoleName.Administrator.ToString()))
            {
                <h2>Create a new account - ADMIN PAGE</h2>
            }
            else
            {
                <h2>Create a new account</h2>
            }
            <hr/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Oib" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.Oib"></label>
                <span asp-validation-for="Input.Oib" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Mbo" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.Mbo"></label>
                <span asp-validation-for="Input.Mbo" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.LastName" class="form-control" autocomplete="username  " aria-required="true"/>
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select class="form-select" asp-items="@Html.GetEnumSelectList<Gender>()" asp-for="Input.Gender">
                    <option id="select"  value="">Gender</option>
                </select>

            </div>
            <div class="form-floating py-2">
                <label class="col-form-label" asp-for="Input.DateOfBirth"></label><br/>
                <input type="date" name="date" class="form-control"/><br/>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.Username"></label>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(RoleName.Administrator.ToString()))
            {
                <div class="form-floating">
                    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                        <option id="select" selected value="">--Select user function--</option>
                    </select>
                </div>
            }
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model HygieiaApp.Models.DTO.TestUserDto

<div class="card-body p-3">
    <form method="post" class="row" enctype="multipart/form-data">
        <input asp-for="ResultsPatient.PatientId" hidden/>
        <div class="border p-3  mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Upload Test Results</h2>
                <hr/>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label class="col-form-label" asp-for="@Model.ResultsPatient.PatientId">Test Result</label>
                <select class="form-select border-0 shadow" asp-items="@Model.TypeOfTest" asp-for="@Model.ResultsPatient.PatientId">
                    <option selected="selected" id="select" value="">Please select one of the above</option>
                </select>
                
                <label class="col-form-label" asp-for="ResultsPatient.DateOfTesting">Date Of Testing</label><br/>
                <input class="form-control border-0 shadow" type="datetime" asp-for="ResultsPatient.DateOfTesting"/><br/>
                <span asp-validation-for="ResultsPatient.DateOfTesting" class="text-danger"></span><br/>
                
                <label class="col-form-label" asp-for="ResultsPatient.Results">Test Result</label><br/>
                <input class="form-control border-0 shadow" type="file" asp-for="ResultsPatient.Results"/><br/>
                <span asp-validation-for="ResultsPatient.Results" class="text-danger"></span><br/>
            </div>
    
            <button type="submit" class="btn btn-primary" style="width: 100px">Submit</button>
            <a asp-controller="Doctor" asp-action="">Back to listing</a>
        </div>
    </form>

</div>
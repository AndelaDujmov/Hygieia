@model HygieiaApp.Models.DTO.TestUserDto

@{
    Layout = null;
}

<form method="post">
    <div class="border p-3  mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add New Record</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label class="col-form-label" asp-for="ResultsPatient.DateOfTesting"></label><br/>
            <input type="date" asp-for="ResultsPatient.DateOfTesting" class="form-control"/><br/>
            <span asp-validation-for="ResultsPatient.DateOfTesting" class="text-danger"></span><br/>
            <label class="col-form-label" ></label>
            <select class="form-select" asp-items="@Model.TypeOfTest">
                <option disabled selected>Select medical condition</option>
            </select>
            
        </div>
        
        <button type="submit" class="btn btn-primary" style="width: 100px">Submit</button>
        <a asp-controller="Medication" asp-action="Index">Back to listing</a>
    </div>
</form>
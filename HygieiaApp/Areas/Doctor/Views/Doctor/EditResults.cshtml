@model HygieiaApp.Models.DTO.TestUserDto

<div class="card-body p-3">
    <form method="post" class="row" enctype="multipart/form-data">
        <input asp-for="ResultsPatient.PatientId" hidden/>
        <div class="row">
            <div class="col-8">
                 <div class="border p-3  mt-4">
                            <div class="row pb-2">
                                <h2 class="text-primary">Edit Test Results</h2>
                                <hr/>
                            </div>
                    
                            <div class="mb-3">
                                <label class="col-form-label" asp-for="ResultsPatient.TestResultId">Test Result</label>
                                <select class="form-select border-0 shadow" asp-items="@Model.TypeOfTest" asp-for="ResultsPatient.TestResultId">
                                    <option selected="selected" id="select" value="@Model.ResultsPatient.TestResultId">Please select one of the above</option>
                                </select>
                                
                                <label class="col-form-label" asp-for="ResultsPatient.DateOfTesting">Date Of Testing</label><br/>
                                <input class="form-control border-0 shadow"  asp-for="ResultsPatient.DateOfTesting"/><br/>
                                <span asp-validation-for="ResultsPatient.DateOfTesting" class="text-danger"></span><br/>
                                
                                <label class="col-form-label" asp-for="ResultsPatient.Results">Test Result</label><br/>
                                <input class="form-control border-0 shadow" name="file" placeholder="@Model.ResultsPatient.Results" type="file" value="@Model.ResultsPatient.Results" asp-for="ResultsPatient.Results"/><br/>
                            </div>
                    
                            <button type="submit" class="btn btn-primary" style="width: 100px">Submit</button>
                            <a asp-controller="Doctor" asp-action="">Back to listing</a>
                        </div>
            </div>
            <div class="col-4">
                <p class="text text-primary">@Model.ResultsPatient.Results</p>
            </div>
        </div>
       
    </form>

</div>
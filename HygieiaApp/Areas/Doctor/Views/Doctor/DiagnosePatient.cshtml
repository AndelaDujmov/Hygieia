@using HygieiaApp.Models.Enums
@model HygieiaApp.Models.DTO.PatientConditionsDto

<div style="padding-top: 22px;">
    <div class="card-body p-3">
        <form method="post" class="row">
            <input asp-for="PatientMedicalCondition.UserId" hidden/>
            <div class="border p-3  mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary py-3 ">Diagnosys</h2>
                    <hr/>
                </div>
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-4">
                    <label class="col-form-label" asp-for="PatientMedicalCondition.Stage"></label>
                    <select class="form-select" asp-items="@Html.GetEnumSelectList<Stage>()" asp-for="PatientMedicalCondition.Stage">
                        <option id="select" disabled selected value="">Please select one of the above</option>
                    </select>
                </div>
                <div class="form-floating py-4">
                    <label class="col-form-label" asp-for="PatientMedicalCondition.MedicalConditionId"></label>
                    <select class="form-select" asp-items="@Model.MedicalConditions" asp-for="PatientMedicalCondition.MedicalConditionId">
                        <option id="select" disabled selected value="">Select medical condition</option>
                    </select>
                </div>
                <div class="form-floating">
                    <label class="col-form-label" asp-for="PatientMedicalCondition.DateOfDiagnosis"></label><br/>
                    <input  asp-for="PatientMedicalCondition.DateOfDiagnosis" class="form-control"/><br/>
                    <span asp-validation-for="PatientMedicalCondition.DateOfDiagnosis" class="text-danger"></span><br/>
                </div>
           
                <div class="form-floating">
                    <label class="col-form-label" asp-for="MedicalCondition.Symptoms"></label><br/>
                    <input type="text" asp-for="MedicalCondition.Symptoms" class="form-control"/><br/>
                    <span asp-validation-for="MedicalCondition.Symptoms" class="text-danger"></span><br/>
                </div>
                <div class="form-floating">
                    <label class="col-form-label" asp-for="MedicalCondition.Treatment"></label><br/>
                    <input type="text" asp-for="MedicalCondition.Treatment" class="form-control"/>
                    <span asp-validation-for="MedicalCondition.Symptoms" class="text-danger"></span><br/>
                </div>
           
                <input type="checkbox" id="myCheck" onclick="myFunction()"> <a class="text-primary" style="text-decoration: none">Medicate patient</a><br/>
                <div id="text" style="display: none">
                    <div class="form-floating py-4">
                        <label class="col-form-label" asp-for="SelectedMedication"></label>
                        <select class="form-select" asp-items="@Model.MedicationSelectList" asp-for="SelectedMedication">
                            <option id="select" disabled selected value="">Select medical condition</option>
                        </select>
                    </div>
                   
                    <div class="form-floating py-2">
                        <label class="col-form-label">Start Date</label>
                        <input class="form-control" type="datetime-local" name="start"/>
                    </div>
                    
                   
                    <div class="form-floating py-2">
                        <label class="col-form-label">Reason</label>
                        <input class="form-control" type="text" name="reason"/>
                    </div>
                    
                    <div class="form-floating py-2">
                        <label class="col-form-label">Maximum Dosage</label><br/>
                        <input type="number" placeholder="0.00" name="maxdose" style="width: 150px; height: 45px;"> &nbsp;mg/d</input>
                    </div>
                    
                    <div class="form-floating py-2">
                        <label class="col-form-label">Frequency</label><br/>
                        <input type="number" name="frequency" />
                    </div>
                </div>
           

            </div>

            <button type="submit" class="btn btn-primary" style="width: 100px">Submit</button>
            <a asp-controller="MedicalCondition" asp-action="Index">Back to listing</a>

        </form>
    </div>
</div>

<script>
function myFunction() {
  // Get the checkbox
  var checkBox = document.getElementById("myCheck");
  // Get the output text
  var text = document.getElementById("text");

  // If the checkbox is checked, display the output text
  if (checkBox.checked == true){
    text.style.display = "block";
  } else {
    text.style.display = "none";
  }
} 
</script>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}


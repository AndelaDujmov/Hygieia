@using HygieiaApp.Utils.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MedicalCondition

@{
    ViewData["Title"] = "Delete Medical Condition";
}

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3  mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Medical Condition</h2>
            <hr/>
        </div>

        <div class="mb-3">
            <label disabled class="col-form-label" asp-for="Category"></label>
            <select class="form-select" asp-items="@Html.GetEnumSelectList<ConditionCategory>()">
                <option selected="selected" id="select" value="">Please select one of the above</option>
            </select>
            <label class="col-form-label" asp-for="Type"></label><br/>
            <input type="text" asp-for="Type" disabled class="form-control"/><br/>
            <label class="col-form-label" asp-for="NameOfDiagnosis"></label><br/>
            <input type="text" asp-for="NameOfDiagnosis" disabled class="form-control"/><br/>
            <label class="col-form-label" asp-for="Symptoms"></label><br/>
            <input type="text" asp-for="Symptoms" disabled class="form-control"/><br/>
            <label class="col-form-label" asp-for="Treatment"></label><br/>
            <input type="text" asp-for="Treatment" disabled class="form-control"/>
        </div>

        <button type="submit" class="btn btn-primary" style="width: 100px"> <i class="bi bi-trash2"></i>Delete</button>
        <a asp-controller="MedicalCondition" asp-action="Index">Back to listing</a>
    </div>
</form>
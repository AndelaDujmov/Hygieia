@page
@model HygieiaApp.Razor.Pages.Immunizations.Index

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Immunizations</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Immunizations/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i> &nbsp; Add new immunization
            </a>
        </div>
        
        <br/>
        <br/>
        <br/>
        <br/>
        <table class="table-primary">
            <thead>
            <tr>
                <th>
                    Type
                </th>
                <th>
                    Used For
                </th>
                <th>
                    
                </th>
                <th>
                    
                </th>
                
            </tr>
            </thead>
            <tbody>
            @foreach (var element in Model.Immunizations)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => element.Type)  </td>
                    <td>@Html.DisplayFor(modelItem => element.UsedFor)  </td>
                    <td>
                        <div class="w-10">
                            <a asp-page="/Immunizations/Edit" asp-route-id="@element.Type" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a> &nbsp;
                        </div>
                    </td>
                    <td>
                        <div class="w-20 ">
                            <a asp-page="/Immunizations/Delete" asp-route-id="@element.Type" class="btn btn-primary">
                                <i class="bi bi-trash"></i> Delete
                            </a>                        &nbsp;
                        </div>
                 
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}